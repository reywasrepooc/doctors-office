<h1>Patient Name: <%= @patient.name %></h1>
<ul>
<% @patient.doctors.each do |doctor|%>
  <li> <%= link_to doctor.name, doctor%></li>
    <%doctor.appointments.where(patient_id: @patient.id).each do |appt|%>
      <li> <%= appt.date %></li>
     <li> <%= appt.notes%></li>
<% end %>
<% end %>
</ul>  
  
